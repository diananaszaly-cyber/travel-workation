---
import { BRAND_DE } from "../lib/site";
const brand = BRAND_DE;

const { title = brand } = Astro.props;
---
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body style="font-family: system-ui; max-width: 900px; margin: 24px auto; padding: 0 16px;">
    <header style="display:flex; gap:12px; align-items:center; justify-content:space-between; padding: 12px 0; border-bottom:1px solid #eee;">
      <div style="display:flex; gap:12px; align-items:center; flex-wrap:wrap;">
        <a href="/de" style="text-decoration:none; font-weight:700;">{brand}</a>
        <nav style="display:flex; gap:12px; flex-wrap:wrap;">
          <a href="/de/workation">Workation</a>
          <a href="/de/reiseideen">Reiseideen</a>
        </nav>
      </div>
      <a href="/en" title="English">EN</a>
    </header>

    <main style="padding: 18px 0;">
      <slot />
    </main>

    <footer style="padding: 18px 0; border-top:1px solid #eee; font-size: 14px;">
      <a href="/de">Start</a> · <a href="/de/workation">Workation</a> · <a href="/de/reiseideen">Reiseideen</a>
    </footer>
  </body>
</html>
