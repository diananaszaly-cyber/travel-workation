---
import WorkationCityPage from "../../../components/WorkationCityPage.astro";

const city = "Zürich";
const title = `${city}: High-Quality Workation (CH)`;
---

<WorkationCityPage
  lang="de"
  title={title}
  city={city}
  backHref="/de/workation"
  otherLangHref="/en/workation/zurich"
  idealFor="Business-Remote-Worker, kleine Teams, ruhige Workation"
  vibe="clean, sicher, hochwertig"
  cards={[
    { label: "Timezone", value: "CET/CEST" },
    { label: "WLAN", value: "9/10" },
    { label: "Lautstärke", value: "4/10" },
    { label: "Kosten", value: "2/10" },
  ]}
  workability={[
    { label: "WLAN-Zuverlässigkeit", value: "9/10" },
    { label: "Lautstärke", value: "4/10", note: "(generell ruhig, Peak-Zeiten beachten)" },
    { label: "Coworking-Dichte", value: "7/10" },
    { label: "Café-Work-Freundlichkeit", value: "6/10" },
    { label: "Sicherheit (nachts)", value: "9/10" },
    { label: "Kosten", value: "2/10" },
  ]}
  areas={[
    { name: "Kreis 1 (Altstadt)", desc: "zentral, gut erreichbar, eher teuer" },
    { name: "Kreis 4 (Langstrasse Umgebung)", desc: "urban, viele Spots, etwas lebhafter" },
    { name: "Oerlikon", desc: "business-nah, gut angebunden, oft ruhiger" },
  ]}
  coworking={[
    { name: "Impact Hub Zürich", desc: "großes Netzwerk, flexibel", url: "https://zurich.impacthub.net" },
    { name: "Coworking Switzerland (Übersicht)", desc: "Sammelseite für Spots", url: "https://coworkingswitzerland.ch" },
    { name: "Co-Working in Oerlikon", desc: "ruhig, gut für Calls (Platzhalter)" },
  ]}
  cafesQuiet={[
    { head: "Laptopfreundliche Cafés", desc: "unter der Woche vormittags am besten" },
    { head: "Ruhige Orte", desc: "Bibliotheken & Hotel-Lobbys (oft top in CH)" },
  ]}
  backup={[
    { head: "Plan A", desc: "WLAN am 1. Tag testen (Speedtest)" },
    { head: "Plan B", desc: "SIM/eSIM als Hotspot-Backup" },
    { head: "Plan C", desc: "Coworking-Daypass als Deadline-Rettung" },
  ]}
  note="Hinweis: Empfehlungen können Partnerlinks enthalten. Keine Rechts- oder Steuerberatung."
/>
