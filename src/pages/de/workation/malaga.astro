---
import WorkationCityPage from "../../../components/WorkationCityPage.astro";

const lang = "de";
const city = "Málaga";
const title = `Workation in ${city}: Sonne, Meer & entspanntes Arbeiten`;

const idealFor = "Solo-Remote-Worker, Paare, kleine Teams";
const vibe = "mediterran, entspannt, sehr angenehm";

const cards = [
  { label: "Zeitzone", value: "CET/CEST" },
  { label: "WLAN", value: "8/10" },
  { label: "Lautstärke", value: "5/10" },
  { label: "Kosten", value: "7/10" },
];

const workability = [
  { label: "WLAN-Zuverlässigkeit", value: "8/10" },
  { label: "Lautstärke", value: "5/10", note: "(Altstadt abends lebhafter)" },
  { label: "Coworking-Dichte", value: "6/10" },
  { label: "Café-Work-Freundlichkeit", value: "7/10" },
  { label: "Sicherheit (nachts)", value: "8/10" },
  { label: "Kosten", value: "7/10" },
];

const areas = [
  { name: "Centro Histórico", desc: "zentral, schön, abends lebhafter" },
  { name: "Soho", desc: "kreativ, gute Spots, city vibe" },
  { name: "Pedregalejo", desc: "mehr Ruhe am Meer, gut für längere stays" },
];

const coworking = [
  { name: "Coworking (TBD)", desc: "2–3 echte Spots ergänzen wir als Nächstes", url: "" },
  { name: "Coworking (TBD)", desc: "Recherche + Links gemeinsam", url: "" },
  { name: "Tipp", desc: "Für Fokus: außerhalb der Altstadt wohnen", url: "" },
];

const cafesQuiet = [
  { head: "Laptopfreundliche Cafés", desc: "unter der Woche vormittags testen" },
  { head: "Ruhige Orte", desc: "Bibliotheken, Hotel-Lobbys, Coworking-Lounges" },
];

const backup = [
  { head: "Plan A", desc: "WLAN am 1. Tag testen (Speedtest)" },
  { head: "Plan B", desc: "SIM/eSIM als Hotspot-Backup" },
  { head: "Plan C", desc: "Coworking-Daypass als Deadline-Rettung" },
];

const note = "Hinweis: Empfehlungen können Partnerlinks enthalten. Keine Rechts- oder Steuerberatung.";
---

<WorkationCityPage
  lang={lang}
  title={title}
  city={city}
  backHref="/de/workation"
  otherLangHref="/en/workation/malaga"
  idealFor={idealFor}
  vibe={vibe}
  cards={cards}
  workability={workability}
  areas={areas}
  coworking={coworking}
  cafesQuiet={cafesQuiet}
  backup={backup}
  note={note}
/>
