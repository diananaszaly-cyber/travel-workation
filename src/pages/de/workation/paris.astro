---
import WorkationCityPage from "../../../components/WorkationCityPage.astro";

const lang = "de";
const city = "Paris";
const title = `Workation in ${city}: Stil, Cafés & Großstadt-Energie`;

const idealFor = "Solo-Remote-Worker, Paare, kleine Teams";
const vibe = "klassisch, urban, inspirierend";

const cards = [
  { label: "Zeitzone", value: "CET/CEST" },
  { label: "WLAN", value: "8/10" },
  { label: "Lautstärke", value: "7/10" },
  { label: "Kosten", value: "3/10" },
];

const workability = [
  { label: "WLAN-Zuverlässigkeit", value: "8/10" },
  { label: "Lautstärke", value: "7/10", note: "(sehr abhängig vom Viertel)" },
  { label: "Coworking-Dichte", value: "8/10" },
  { label: "Café-Work-Freundlichkeit", value: "6/10", note: "(nicht jedes Café mag Laptops)" },
  { label: "Sicherheit (nachts)", value: "7/10" },
  { label: "Kosten", value: "3/10" },
];

const areas = [
  { name: "Le Marais (3./4.)", desc: "zentral, viele Spots, lebendig" },
  { name: "Batignolles (17.)", desc: "etwas ruhiger, lokal" },
  { name: "Montparnasse (14.)", desc: "praktisch, gute Anbindung" },
];

const coworking = [
  { name: "Coworking (TBD)", desc: "2–3 echte Spots ergänzen wir als Nächstes", url: "" },
  { name: "Coworking (TBD)", desc: "Recherche + Links gemeinsam", url: "" },
  { name: "Tipp", desc: "Für Calls: Coworking statt Café", url: "" },
];

const cafesQuiet = [
  { head: "Laptopfreundliche Cafés", desc: "vorher testen (Regeln variieren)" },
  { head: "Ruhige Orte", desc: "Bibliotheken, Hotel-Lobbys, Coworking-Lounges" },
];

const backup = [
  { head: "Plan A", desc: "WLAN am 1. Tag testen (Speedtest)" },
  { head: "Plan B", desc: "SIM/eSIM als Hotspot-Backup" },
  { head: "Plan C", desc: "Coworking-Daypass als Deadline-Rettung" },
];

const note = "Hinweis: Empfehlungen können Partnerlinks enthalten. Keine Rechts- oder Steuerberatung.";
---

<WorkationCityPage
  lang={lang}
  title={title}
  city={city}
  backHref="/de/workation"
  otherLangHref="/en/workation/paris"
  idealFor={idealFor}
  vibe={vibe}
  cards={cards}
  workability={workability}
  areas={areas}
  coworking={coworking}
  cafesQuiet={cafesQuiet}
  backup={backup}
  note={note}
/>
