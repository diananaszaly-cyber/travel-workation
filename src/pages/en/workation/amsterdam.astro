---
import WorkationCityPage from "../../../components/WorkationCityPage.astro";

const lang = "en";
const city = "Amsterdam";
const title = `Workation in ${city}: stay productive & enjoy the canals`;

const idealFor = "solo remote workers, couples, small teams";
const vibe = "international, creative, urban";

const cards = [
  { label: "Timezone", value: "CET/CEST" },
  { label: "WiFi", value: "9/10" },
  { label: "Noise", value: "6/10" },
  { label: "Costs", value: "4/10" },
];

const workability = [
  { label: "WiFi reliability", value: "9/10" },
  { label: "Noise", value: "6/10", note: "(center is livelier; outside is calmer)" },
  { label: "Coworking density", value: "8/10" },
  { label: "Café friendliness", value: "7/10" },
  { label: "Night safety", value: "8/10" },
  { label: "Costs", value: "4/10" },
];

const areas = [
  { name: "De Pijp", desc: "lively, many cafés, well connected" },
  { name: "Amsterdam Oost", desc: "a bit calmer, lots of options, local vibe" },
  { name: "Zuidas", desc: "business area, good for quiet calls" },
];

const coworking = [
  {
    name: "B. Amsterdam (Coworking Floor)",
    desc: "Large creative campus with flexible coworking",
    url: "https://b-amsterdam.com/en/werkplekken/cowork-floor/",
  },
  {
    name: "TNW City",
    desc: "Tech coworking hub on the canal (The Next Web)",
    url: "https://thenextweb.com/spaces/locations/city",
  },
  {
    name: "WeWork Amsterdam",
    desc: "Multiple locations, flexible memberships",
    url: "https://www.wework.com/l/coworking-space/amsterdam",
  },
];

const cafesQuiet = [
  { head: "Laptop-friendly cafés", desc: "test weekdays in the morning" },
  { head: "Quiet spots", desc: "libraries, hotel lobbies, coworking lounges" },
];

const backup = [
  { head: "Plan A", desc: "test accommodation WiFi on day 1 (speedtest)" },
  { head: "Plan B", desc: "SIM/eSIM hotspot backup" },
  { head: "Plan C", desc: "coworking day pass as a deadline rescue" },
];

const note = "Note: recommendations may include partner links. No legal or tax advice.";
---

<WorkationCityPage
  lang={lang}
  title={title}
  city={city}
  backHref="/en/workation"
  otherLangHref="/de/workation/amsterdam"
  idealFor={idealFor}
  vibe={vibe}
  cards={cards}
  workability={workability}
  areas={areas}
  coworking={coworking}
  cafesQuiet={cafesQuiet}
  backup={backup}
  note={note}
/>
